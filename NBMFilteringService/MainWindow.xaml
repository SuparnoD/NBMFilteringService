<Window x:Class="NBMFilteringService.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NBMFilteringService"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="title" HorizontalAlignment="Left" Margin="90,20,0,0" TextWrapping="Wrap" Text="Napier Bank Message Filtering Service" VerticalAlignment="Top" Height="58" Width="634" FontSize="36"/>
        <TextBox x:Name="msgHeader" HorizontalAlignment="Left" Height="35" Margin="255,102,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="340"/>
        <TextBox x:Name="msgBody" HorizontalAlignment="Left" Height="179" Margin="255,183,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="340"/>
        <Label x:Name="headerLabel" Content="Message Header" HorizontalAlignment="Left" Margin="132,111,0,0" VerticalAlignment="Top" Width="102"/>
        <Label x:Name="bodyLabel" Content="Message Body" HorizontalAlignment="Left" Margin="132,183,0,0" VerticalAlignment="Top" Width="102"/>
        <Button x:Name="subBtn" Content="Submit" HorizontalAlignment="Left" Margin="636,331,0,0" VerticalAlignment="Top" Width="105" Height="31" Click="subBtn_Click"/>

    </Grid>
</Window>
